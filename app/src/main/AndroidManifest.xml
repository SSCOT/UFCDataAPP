<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sergio.ufcdataappinicial.ufcdataapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_logo_ufc"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_logo_ufc_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Domain.Activities.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Domain.Activities.ArticleActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Domain.Activities.MediaActivity"
            android:theme="@style/AppThemeNoToolbar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".Domain.Activities.FighterActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoToolbar" />
        <activity
            android:name=".Domain.Activities.PhotoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoToolbar" />
        <activity
            android:name=".Domain.Activities.EventActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoToolbar" />
        <activity
            android:name=".Domain.Activities.FightActivity"
            android:screenOrientation="portrait" />

        <receiver android:name=".Domain.Alarms.AlarmReceiver" />

        <!--        <activity android:name=".Domain.Activities.DialogSettingsActivity"></activity>-->
    </application>

</manifest>