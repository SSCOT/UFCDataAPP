        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relativePuntuacion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/largeDouble">

            <TextView
                android:id="@+id/txtTipoFinal"
                style="@style/textoSecundarioFondoNegro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                tools:text="Decission - Split" />

            <TextView
                android:id="@+id/txtScore1"
                style="@style/textoSubtitulo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/txtTipoFinal"
                android:layout_marginTop="@dimen/small"
                android:gravity="center"
                tools:text="48/47" />

            <TextView
                android:id="@+id/txtScore2"
                style="@style/textoSubtitulo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/txtScore1"
                android:layout_marginTop="@dimen/small"
