<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/CardStandard"
    android:layout_marginEnd="@dimen/small"
    android:layout_marginStart="@dimen/small"
    android:clickable="true"
    android:elevation="@dimen/none"
    android:focusable="true"
    android:foreground="?android:actionBarItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/titulo"
            style="@style/textoTituloInvertGold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            tool:text="UFC 223: Khabib vs. Iaquinta" />

        <ImageView
            android:id="@+id/imgLuchador1"
            android:layout_width="@dimen/large"
            android:layout_height="@dimen/large"
            android:layout_below="@id/titulo"
            android:layout_margin="@dimen/small"
            tool:src="@color/cardview_shadow_start_color" />

        <TextView
            android:id="@+id/txtLuchador1"
            style="@style/textoMenorDestacado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titulo"
            android:layout_marginTop="@dimen/small"
            android:layout_toEndOf="@id/imgLuchador1"
            tool:text="Al" />

        <TextView
            android:id="@+id/txtLuchadorApe1"
            style="@style/textoMenorDestacado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtLuchador1"
            android:layout_toEndOf="@id/imgLuchador1"
            tool:text="Iaquinta" />

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="?android:attr/listDivider" />

        <ImageView
            android:id="@+id/imgLuchador2"
            android:layout_width="@dimen/large"
            android:layout_height="@dimen/large"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/titulo"
            android:layout_margin="@dimen/small"
            tool:src="@color/cardview_shadow_start_color" />

        <TextView
            android:id="@+id/txtLuchador2"
            style="@style/textoMenorDestacado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titulo"
            android:layout_marginTop="@dimen/small"
            android:layout_toStartOf="@id/imgLuchador2"
            tool:text="Al" />

        <TextView
            android:id="@+id/txtLuchadorApe2"
            style="@style/textoMenorDestacado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtLuchador2"
            android:layout_toStartOf="@id/imgLuchador2"
            tool:text="Iaquinta" />

        <TextView
            android:id="@+id/win1"
            style="@style/textoWin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtLuchadorApe1"
            android:layout_marginStart="@dimen/small"
            android:layout_toEndOf="@id/imgLuchador1"
            android:text="WIN"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/win2"
            style="@style/textoWin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtLuchadorApe2"
            android:layout_marginEnd="@dimen/small"
            android:layout_toStartOf="@id/imgLuchador2"
            android:text="WIN"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/txtTipoFinal"
            style="@style/textoSecundarioFondoNegro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/small"
            android:padding="2dp"
            android:visibility="gone"
            tool:text="Decission" />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="?android:attr/listDivider" />
    </RelativeLayout>
</android.support.v7.widget.CardView>