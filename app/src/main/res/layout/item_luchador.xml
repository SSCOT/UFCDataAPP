<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/CardStandard"
    android:layout_margin="@dimen/smallHalf"
    android:layout_marginBottom="@dimen/smallHalf"
    android:elevation="@dimen/small"
    card_view:cardCornerRadius="@dimen/smallHalf">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            card_view:srcCompat="@android:drawable/btn_star" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="@dimen/small"
            android:paddingTop="@dimen/small">

            <TextView
                android:id="@+id/txtLuchador1"
                style="@style/textoTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/small"
                android:fontFamily="@font/armata"
                android:gravity="center"
                tool:text="Tony Ferguson" />

            <TextView
                android:id="@+id/txtNick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtLuchador1"
                android:gravity="center"
                tool:text="'Mandanguita'" />
        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>