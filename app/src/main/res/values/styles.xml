<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeNoToolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Launcher">
    <item name="android:windowBackground">@drawable/launch</item>
    <!-- Optional, on Android 5+ you can modify the colorPrimaryDark color to match the windowBackground color for further branding-->
    <!-- <item name="colorPrimaryDark">@android:color/white</item> -->
    </style>

    <style name="textoEspecial">
        <item name="android:fontFamily">@font/armata</item>
    </style>

    <style name="textoTitulo" parent="textoEspecial">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textoTituloInvert" parent="textoTitulo">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="textoTituloInvertSpecial" parent="textoTituloInvert">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="textoTituloInvertGold" parent="textoTituloInvert">
        <item name="android:background">@color/gold</item>
    </style>

    <style name="textoSubtitulo" parent="textoEspecial">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="textoSubtituloNegro" parent="textoSubtitulo">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textoMenor" parent="textoEspecial">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textoWin" parent="textoMenor">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/win</item>
    </style>

    <style name="textoLose" parent="textoWin">
        <item name="android:background">@color/black</item>
    </style>

    <style name="textoMenorDestacado" parent="textoEspecial">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textoMenorDorado" parent="textoEspecial">
        <item name="android:textSize">12dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@color/gold</item>
        <item name="android:textColor">@color/white</item>
    </style>



</resources>
